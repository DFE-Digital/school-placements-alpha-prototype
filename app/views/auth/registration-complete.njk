{% extends "layouts/auth.njk" %}

{% set title = "Your DfE Sign-in account has been created"  %}

{% block pageTitle %}
{{ title }} – {{ serviceName }} – GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: title
      }) }}

      {{ govukButton({
        text: "Sign in with DfE Sign-in",
        href: actions.next
      }) }}

    </div>
  </div>
{% endblock %}
