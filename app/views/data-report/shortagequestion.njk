{% extends "layouts/main.njk" %}

{#-----IMPORT FORM COMPONENTS WE NEED-----#}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{#-----PAGE TITLE-----#}
{% set pageTitle = "Shortage" %}

{#-----BACK LINK-----#}
{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/data-report/"
  }) }}
{% endblock %}

{#-----MAIN CONTENT BELOW-----#}
{% block content %}

{#-----CREATE GRID TO HOLD OUR CONTENT IN 2/3 OF THE PAGE-----#}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    {#-----HEADER TEXT-----#}
    <h1 class="govuk-heading-xl">
      Do you have a shortage of any resources?
    </h1>

    {#-----EXPLANATORY TEXT FOR OUR QUESTION-----#}
    <p class="govuk-body">
    For example too many history teachers, or not enough physics mentors.
    </p>

    {#-----RADIO CONTROL-----#}
    {{ govukRadios({
      name: "template-question",
      fieldset: {
        legend: {
          text: "We have a shortage of",
          isPageHeading: false,
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: [
        {
          value: "trainees",
          text: "Trainees"
        },
        {
          value: "mentors",
          text: "Mentors"
        },
        {
          value: "none",
          text: "None"
        }
      ]
    }) }}

    {#-----CONTINUE BUTTON-----#}
    {{ govukButton({
      text: "Continue",
      href: "/data-report/shortagesubject"
    }) }}

  </div>
</div>

{% endblock %}
