{% extends "layouts/main.njk" %}

{% set hidePrimaryNavigation = true %}
{% set hideOrganisationSwitcher = true %}

{% set title = "Do you have a shortage of mentors or trainees?" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/data-report/"
  }) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <form action="/data-report/shortage-subject" method="post" accept-charset="utf-8" novalidate>

      {{ govukCheckboxes({
        idPrefix: "datareport",
        name: "datareport[shortage][question]",
        fieldset: {
          legend: {
            text: title,
            isPageHeading: false,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "mentors",
            text: "Mentors"
          },
          {
            value: "trainees",
            text: "Trainees"
          },
          {
            divider: "or"
          },
          {
            value: "none",
            text: "None",
            behaviour: "exclusive"
          }
        ]
      }) }}

      {{ govukButton({
        text: "Continue"
      }) }}

    </form>

    <p class="govuk-body">
      <a class="govuk-link" href="/data-report">Cancel</a>
    </p>

  </div>
</div>

{% endblock %}
