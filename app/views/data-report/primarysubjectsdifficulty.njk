{% extends "layouts/main.njk" %}

{#-----IMPORT FORM COMPONENTS WE NEED-----#}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{#-----PAGE TITLE-----#}
{% set pageTitle = "Question Title" %}

{#-----BACK LINK-----#}
{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/data-report/surplus"
  }) }}
{% endblock %}

{#-----MAIN CONTENT BELOW-----#}
{% block content %}

{#-----CREATE GRID TO HOLD OUR CONTENT IN 2/3 OF THE PAGE-----#}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    {#-----HEADER TEXT-----#}
    <h1 class="govuk-heading-xl">
      Which Primary subjects are hard to find placements for?
    </h1>

    {#-----EXPLANATORY TEXT FOR OUR QUESTION-----#}
    <p class="govuk-body">

    </p>

    {#-----CHECKBOXES COMPONENT-----#}
    {{ govukCheckboxes({
      idPrefix: "subject",
      name: "filter[subject]",
      fieldset: {
        legend: {
          text: headingHtml,
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      hint: {
        text: "Select all that apply"
      },
      errorMessage: errors | getErrorMessage("subject"),
      items: subjectOptions
    }) }}

    {#-----CONTINUE BUTTON-----#}
    {{ govukButton({
      text: "Continue",
      href: "/data-report/secondarysubjectsdifficulty"
    }) }}

  </div>
</div>

{% endblock %}
