{% extends "layouts/main.njk" %}

{% set primaryNavId = "mentors" %}

{% set title = "Mentors" %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {% if organisation.type == "school" %}
        {{ govukButton({
          text: "Add mentor",
          href: actions.new
        }) }}
      {% else %}
        {{ govukButton({
          text: "Find mentors",
          href: actions.find
        }) }}
      {% endif %}

    </div>
  </div>

  <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">

        {% if mentors.length %}

          <table class="govuk-table app-table--vertical-align-middle">
            <thead class="govuk-table__head">
              <tr class="govuk-table__row">
                <th class="govuk-table__header">Mentor</th>
                <th class="govuk-table__header">Teacher reference number (TRN)</th>
                <th class="govuk-table__header">Email</th>
              </tr>
            </thead>
            <tbody class="govuk-table__body">

              {% for mentor in mentors %}
                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">
                    <a class="govuk-link govuk-heading-s govuk-!-margin-bottom-0" href="{{ actions.view }}/{{ mentor.id }}">
                      {{ mentor.firstName }} {{ mentor.lastName }}
                    </a>
                  </td>
                  <td class="govuk-table__cell">
                    {{ mentor.trn if mentor.trn else "Not entered" }}
                  </td>
                  <td class="govuk-table__cell">
                    {{ mentor.email }}
                  </td>
                </tr>

              {% endfor %}
            </tbody>

          </table>

        {% else %}
          <p class="govuk-body">There are no mentors for {{ organistion.name if organistion.name else "your organisation" }}.</p>
        {% endif %}

      </div>
    </div>

{% endblock %}

{% block pageScripts %}

{% endblock %}
