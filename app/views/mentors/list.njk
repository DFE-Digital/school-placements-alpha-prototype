{% extends "layouts/main.njk" %}

{% set primaryNavId = "mentors" %}

{% set title = "Mentors" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {{ govukButton({
        text: "Find a mentor",
        href: actions.find
      }) }}

    </div>
  </div>

  <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">

        {# {% if mentors.length %} #}

          <table class="govuk-table app-table--vertical-align-middle">
            <thead class="govuk-table__head">
              <tr class="govuk-table__row">
                <th class="govuk-table__header">Col1</th>
                <th class="govuk-table__header">Col2</th>
                <th class="govuk-table__header">Col3</th>
                <th class="govuk-table__header">Col4</th>
              </tr>
            </thead>
            <tbody class="govuk-table__body">

              {# {% for mentor in mentors %} #}
                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">
                    <a class="govuk-link govuk-heading-s govuk-!-margin-bottom-0" href="{{ actions.view }}/{{ mentor.id }}">
                      Col1 Row1
                    </a>
                  </td>
                  <td class="govuk-table__cell">
                    Col2 Row1
                  </td>
                  <td class="govuk-table__cell">
                    Col3 Row1
                  </td>
                  <td class="govuk-table__cell">
                    Col4 Row1
                  </td>
                </tr>

                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">
                    <a class="govuk-link govuk-heading-s govuk-!-margin-bottom-0" href="{{ actions.view }}/{{ mentor.id }}">
                      Col1 Row2
                    </a>
                  </td>
                  <td class="govuk-table__cell">
                    Col2 Row2
                  </td>
                  <td class="govuk-table__cell">
                    Col3 Row2
                  </td>
                  <td class="govuk-table__cell">
                    Col4 Row2
                  </td>
                </tr>

                <tr class="govuk-table__row">
                  <td class="govuk-table__cell">
                    <a class="govuk-link govuk-heading-s govuk-!-margin-bottom-0" href="{{ actions.view }}/{{ mentor.id }}">
                      Col1 Row3
                    </a>
                  </td>
                  <td class="govuk-table__cell">
                    Col2 Row3
                  </td>
                  <td class="govuk-table__cell">
                    Col3 Row3
                  </td>
                  <td class="govuk-table__cell">
                    Col4 Row3
                  </td>
                </tr>
              {# {% endfor %} #}
            </tbody>

          </table>

        {# {% else %}
          <p class="govuk-body">There are no mentors for {{ provider.name if provider.name else "your organisation" }}.</p>
        {% endif %} #}

      </div>
    </div>

{% endblock %}

